<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
	<service id="blade.portlet.BlueprintPortlet.service" interface="javax.portlet.Portlet" ref="blade.portlet.BlueprintPortlet">
		<service-properties>
			<entry key="com.liferay.portlet.display-category" value="category.sample" />
			<entry key="com.liferay.portlet.instanceable" value="true" />
			<entry key="javax.portlet.display-name" value="Blueprint Portlet" />
			<entry key="javax.portlet.security-role-ref" value="power-user,user" />
		</service-properties>
	</service>

	<bean id="blade.portlet.BlueprintPortlet" class="blade.portlet.BlueprintPortlet" />
</blueprint>